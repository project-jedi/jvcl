    SendMessage(PreviousWnd, WM_KILLFOCUS, Integer(Handle), 0);
  if Focused and (PreviousWnd <> Handle) then
    SendMessage(Handle, WM_SETFOCUS, Integer(PreviousWnd), 0);
end;

